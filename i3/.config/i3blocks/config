# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks

command=/usr/lib/i3blocks/$BLOCK_NAME
separator_block_width=15
markup=none

# Volume indicator
[volume]
label=♪
instance=Master
interval=once
signal=10

[backlight]
label=
command=~/.config/i3blocks/backlight
interval=once
signal=12


[layout]
label=
command=~/.config/i3blocks/layout
interval=once
signal=11

# Disk usage
[disk]
label=
interval=30

# Network interface monitoring
[iface]
#instance=wlan0
color=#00FF00
interval=10
#separator=false

[wifi]
interval=10

# CPU usage
[cpu_usage]
label=
interval=10
separator=false

# Temperature
[temperature]
label=
interval=10

# Battery indicator
[battery]
label=
command=~/.config/i3blocks/battery
interval=30

# Date Time
[time]
command=date '+%Y-%m-%d %H:%M'
interval=60
